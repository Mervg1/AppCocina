<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondoss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:alpha=".60" />

    <Button
        android:id="@+id/buttonRecetas"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginBottom="32dp"
        android:text="Recetas"
        app:layout_constraintBottom_toTopOf="@+id/buttonSuper"
        app:layout_constraintStart_toStartOf="@+id/buttonSuper" />

    <Button
        android:id="@+id/buttonPerfil"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginBottom="272dp"
        android:text="Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginBottom="196dp"
        android:text="Cerrar Sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="logout"
        />

    <Button
        android:id="@+id/buttonSuper"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:text="Lista de Super"
        app:layout_constraintBottom_toTopOf="@+id/buttonPerfil"
        app:layout_constraintStart_toStartOf="@+id/buttonPerfil" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:fontFamily="sans-serif-black"
        android:text="Selecciona una opción"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecetas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
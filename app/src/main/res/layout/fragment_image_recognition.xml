<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageRecognition">

    <ImageView
        android:id="@+id/imagen_analizar"
        android:layout_width="252dp"
        android:layout_height="213dp"
        android:layout_marginBottom="48dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/seleccionarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/seleccionarButton"
        android:layout_width="312dp"
        android:layout_height="67dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#FB8C8C"
        android:text="Seleccionar Foto"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toTopOf="@+id/analizarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/analizarButton"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#FB8C8C"
        android:clickable="false"
        android:enabled="false"
        android:text="Analizar"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/texto_analizar"
        android:layout_width="364dp"
        android:layout_height="80dp"
        android:text="Favor de cargar y analizar"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analizarButton"
        app:layout_constraintVertical_bias="0.423" />
</androidx.constraintlayout.widget.ConstraintLayout>